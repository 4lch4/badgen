{
  "name": "badgen",
  "version": "2.8.2",
  "description": "Fast svg badge generator.",
  "repository": "amio/badgen",
  "author": "Amio <amio.cn@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "standard src/*.js",
    "bench": "node bench/index.js",
    "preview": "node preview/serve.js",
    "snaptests": "TAP_SNAPSHOT=1 npm test",
    "pretest": "npm run lint && npm run build",
    "test": "tap test/*.spec.js --reporter spec --coverage",
    "prebuild": "rm -rf dist",
    "build": "ncc -s -m --no-source-map-register build src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.20.5",
    "benchmark": "^2.1.4",
    "serve-marked": "^2.0.2",
    "standard": "^14.3.1",
    "tap": "^14.6.9"
  },
  "dependencies": {
    "typescript": "^3.7.0-beta"
  }
}
